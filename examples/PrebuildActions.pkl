amends "../Workflow.pkl"
import "../Action.pkl"
import "../actions/Setup.pkl"

name = "Check prebuild actions"

on {
  push {}
}

jobs {
  ["test-various-actions"] {
    name = "Test actions"
    `runs-on` = "macos-latest"
    steps {
      Action.checkout
      new Setup.Go {
        with {
          `go-version` = "1.17.7"
          `check-latest` = true
        }
      }
      (Action.setupJava) {
        with {
          `java-version` = "17"
          distribution = "temurin"
        }
      }
      (Action.cache) {
        with {
          path = "wiki/README.md"
          key = "wiki-readme-${{ runner.os }}-${{ hashFiles('wiki/generateWikiToc.go') }}"
        }
      }
      (Action.uploadPagesArtifact) {
        with {
          path = "tmp-doc"
        }
      }
      (Action.deployPages) {
        id = "deployment"
      }
    }
  }
}