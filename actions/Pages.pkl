/// Actions for managing pages in GitHub workflows.
/// This module is a low-level module not indended for direct use.
/// Use the [Action](../Action) module instead to access these actions.
module com.github.action.actions.Pages

import "../Workflow.pkl"

/// Type-safe GitHub Action of the [configure-pages](https://github.com/actions/configure-pages) action.
class Configure extends Workflow.TypedStep {
  fixed uses = "actions/configure-pages@v5"
  with: ConfigureInputs?
}

class ConfigureInputs {
  /// Optional static site generator to attempt to configure: "nuxt", "next", "gatsby", or "sveltekit"
  `static_site_generator`: (String|Number|Boolean)?
  /// Optional file path to static site generator configuration file
  generator_config_file: (String|Number|Boolean)?
  /// GitHub token
  token: (String|Number|Boolean)?
  /// Try to enable Pages for the repository if it is not already enabled. This option requires a token other than `GITHUB_TOKEN` to be provided. In the context of a Personal Access Token, the `repo` scope or Pages write permission is required. In the context of a GitHub App, the `administration:write` and `pages:write` permissions are required.
  enablement: (String|Number|Boolean)?
}

/// Type-safe GitHub Action of the [upload-pages-artifact](https://github.com/actions/upload-pages-artifact) action.
class UploadArtifact extends Workflow.TypedStep {
  fixed uses = "actions/upload-pages-artifact@v4"
  with: UploadArtifactInputs?
}

class UploadArtifactInputs {
  name: (String|Number|Boolean)?
  path: (String|Number|Boolean)?
  `retention-days`: (String|Number|Boolean)?
}

/// Type-safe GitHub Action of the [jekyll-build-pages](https://github.com/actions/jekyll-build-pages) action.
class JekyllBuild extends Workflow.TypedStep {
  fixed uses = "actions/jekyll-build-pages@v1"
  with: JekyllBuildInputs?
}

class JekyllBuildInputs {
  source: (String|Number|Boolean)?
  destination: (String|Number|Boolean)?
  future: (String|Number|Boolean)?
  build_revision: (String|Number|Boolean)?
  verbose: (String|Number|Boolean)?
  token: (String|Number|Boolean)?
}

/// Type-safe GitHub Action of the [deploy-pages](https://github.com/actions/deploy-pages) action.
class Deploy extends Workflow.TypedStep {
  fixed uses = "actions/deploy-pages@v4"
  with: DeployInputs?
}

class DeployInputs {
  token: (String|Number|Boolean)?
  timeout: (String|Number|Boolean)?
  error_count: (String|Number|Boolean)?
  reporting_interval: (String|Number|Boolean)?
  artifact_name: (String|Number|Boolean)?
  preview: (String|Number|Boolean)?
}
