/// Prebuild GitHub Actions in a typed way.
/// Use them to eliminate boilerplate code in your plk workflows.
///
/// Example:
/// ```pkl
/// steps {
///   (Actions.checkout) {
///     fetchDepth = 0
///     token = Context.secrets("CUSTOM_PAT")
///   }
///   (Actions.setupGo) {
///     goVersion = "1.20.2"
///    }
/// }
@ModuleInfo { minPklVersion = "0.25.3" }
module com.github.action.Action
import "actions/Artifact.pkl"
import "actions/Cache.pkl"
import "actions/Common.pkl"
import "actions/Pages.pkl"
import "actions/Setup.pkl"

// Default Actions:
checkout: Common.Checkout = new {}
addToProject: Common.AddToProject = new {}
gitHubScript: Common.GitHubScript = new {}
labeler: Common.Labeler = new {}
deletePackageVersion: Common.DeletePackageVersion = new {}
stale: Common.Stale = new {}
dependencyReviewAction: Common.DependencyReviewAction = new {}
goDependencySubmission: Common.GoDependencySubmission = new {}
attestSbom: Common.AttestSbom = new {}
aiInference: Common.AiInference = new {}
createGitHubAppToken: Common.CreateGitHubAppToken = new {}

// Artifact Actions:
downloadArtifact: Artifact.Download = new {}
uploadArtitact: Artifact.Upload = new {}
uploadArtifactMerge: Artifact.UploadArtifactMerge = new {}

// Page Actions:
configurePages: Pages.Configure = new {}
uploadPagesArtifact: Pages.UploadArtifact = new {}
jekyllBuildPages: Pages.JekyllBuild = new {}
deployPages: Pages.Deploy = new {}

// Cache Actions:
cache: Cache.Cache = new {}
cacheSave: Cache.Save = new {}
cacheRestore: Cache.Restore = new {}

// Setup Actions:
setupGo: Setup.Go = new {}
setupNode: Setup.Node = new {}
setupPython: Setup.Python = new {}
setupJava: Setup.Java = new {}