amends "@gha/Workflow.pkl"
import "modules/Steps.pkl"

name = "Test"

on {
  push {
    branches {
      "main"
    }
  }
  pull_request {}
}

jobs {
  ["test"] {
    `runs-on` = new UbuntuLatest {}
    steps {
      ...Steps.checkoutAndInstallPkl
      new {
        name = "Test pkl module"
        run = "pkl test"
      }
    }
  }
}
