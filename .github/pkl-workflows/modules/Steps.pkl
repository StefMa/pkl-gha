import "package://pkg.pkl-lang.org/github.com/stefma/pkl-gha/com.github.action@0.0.4#/GitHubAction.pkl"

function checkout(): GitHubAction.Step = new {
  name = "checkout"
  uses = "actions/checkout@v4"
}

function installPkl(): GitHubAction.Step = new {
  name = "Install pkl"
  uses = "pkl-community/setup-pkl@v0"
  with {
    ["pkl-version"] = "0.26.1"
  }
}

function checkoutAndInstallPkl(): Listing<GitHubAction.Step> = new {
  checkout()
  installPkl()
}